header
    div.header__container
        div.start
            button#sidebarBtn.sidebar__icon
                i.fas.fa-bars
            a(href="/")
                i.fab.fa-youtube.header__logo 
                span.header__wetube WeTube
        
        div.search__bar
            form(method="GET" action="/search").search__form
                div
                    input.search__input(placeholder="Search", type="text", name="keyword")
                    i.fas.fa-search.search__icon
                    button(type="submit").search__btn
                        i.fas.fa-search.search__icon
        div.user__btns
            button#dropdownBtn
                i.fa.fa-ellipsis-v
            div#dropdown.dropdown-menu
                div.dropdown-menu__links 
                    ul
                        li
                            p.dropdown-menu-link 
                                i.fa-solid.fa-user
                                span Appearance: Device Theme
                        li 
                            p.dropdown-menu-link  
                                i.fa-solid.fa-photo-film
                                span Language: English
                        li 
                            p.dropdown-menu-link 
                                i.fa-solid.fa-user-pen 
                                span Restricted Mode: Off
                        li 
                            p.dropdown-menu-link  
                                i.fa-solid.fa-arrow-right-from-bracket
                                span Location: United States
                div.dropdown-menu__links
                    ul 
                        li 
                            a(href="/").dropdown-menu-link  
                                i.fa-solid.fa-gears
                                span Settings
                div.dropdown-menu__links
                    ul 
                        li 
                            a(href="/").dropdown-menu-link 
                                i.fa-solid.fa-question
                                span Help
                        li 
                            a(href="/").dropdown-menu-link  
                                i.fa-solid.fa-file-circle-exclamation
                                span Send feedback
            if loggedIn
                button#userDropdownBtn.dropdown__btn
                    if !loggedInUser.avatarUrl
                        a(href=`/users/${loggedInUser._id}`).avatar.no-image
                            span=loggedInUser.lastName.substring(0,1) 
                    else  
                        img(src=`${loggedInUser.avatarUrl},`,crossOrigin).avatar
                div#userDropdown.dropdown-menu   
                    div.dropdown-menu__header
                        if !loggedInUser.avatarUrl
                            div.avatar.no-image
                                span=loggedInUser.lastName.substring(0,1) 
                        else  
                            img(src=`${loggedInUser.avatarUrl}`,crossOrigin).avatar
                        div.dropdown-menu__account
                            h3=loggedInUser.firstName + ' ' +loggedInUser.lastName
                            h4=loggedInUser.email
                            a(href="/users/edit") Manage your account 
                    div.dropdown-menu__links 
                        ul
                            li
                                a(href=`/users/${loggedInUser._id}`).dropdown-menu-link  
                                    i.fa-solid.fa-user
                                    span View profile
                            li 
                                a(href="/videos/upload").dropdown-menu-link  
                                    i.fa-solid.fa-photo-film
                                    span Upload videos
                            li 
                                a(href="/users/edit").dropdown-menu-link 
                                    i.fa-solid.fa-user-pen 
                                    span Edit profile
                            li 
                                a(href="/users/logout").dropdown-menu-link  
                                    i.fa-solid.fa-arrow-right-from-bracket
                                    span Sign out
                    div.dropdown-menu__links
                        ul 
                            li 
                                a(href="/").dropdown-menu-link  
                                    i.fa-solid.fa-gears
                                    span Settings
                    div.dropdown-menu__links
                        ul 
                            li 
                                a(href="/").dropdown-menu-link  
                                    i.fa-solid.fa-question
                                    span Help
                            li 
                                a(href="/").dropdown-menu-link  
                                    i.fa-solid.fa-file-circle-exclamation
                                    span Send feedback
            else
                a(href="/join").signin__btn 
                    i.fa-regular.fa-user 
                    span Sign in
    