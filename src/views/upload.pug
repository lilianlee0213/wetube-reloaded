extends base

block content 
    if errorMessage
        span=errorMessage
    
    form(method="post")
        input(name="title" type="text" placeholder="Video Title" required maxlength=20) 
        input(name="description" type="text" placeholder="Description" required minlength=20) 
        input(name="hashtags" type="text" placeholder="Hashtags, separated by comma." required) 
        input(type="submit" value="Upload Video")