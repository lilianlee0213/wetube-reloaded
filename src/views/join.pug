html(lang="en")
    head 
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer")
        //- link(rel="stylesheet" href="https://kit.fontawesome.com/93143b8d47.css" crossorigin="anonymous")
        link(rel="stylesheet" href="/static/css/styles.css")
    body
        div.container.flex-c.center
            div.header__container
                    a(href="/") 
                        i.fab.fa-youtube.header-logo 
                    h1.header-wetube Sign up to Wetube
            div.form__container.join__form
                if errorMessage
                    span.errorMessage=errorMessage
                form(method="POST").flex-c
                    label(for="firstName") First name
                    input(placeholder="First Name",name="firstName", type="text", required)
            
                    label(for="lastName") Last name 
                    input(placeholder="Last Name",name="lastName", type="text", required)
                    label(for="username") Username  
                    input(placeholder="Username",name="username", type="text", required)
                    label(for="email") Email  
                    input(placeholder="Email",name="email", type="email", required)
                    label(for="password") Password  
                    input(placeholder="Password",name="password", type="password", required)
                    label(for="password2") Password confirmation
                    input(placeholder="Confirm Password", name="password2", type="password", required)
                    label(for="location") Location  
                    input(placeholder="Location",name="location", type="text", required) 
                    input.submit-btn(type="submit", value="Join")
            div.link__container.join__link
                span Already have account? 
                    a(href="/login") Login Now 
